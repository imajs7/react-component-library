{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2016",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["stories"],
  "exclude": ["node_modules", ".storybook", "**/*.spec.ts"]
}
